# Note: Users now manage their own Gemini API keys through the frontend profile section
# The global GEMINI_API_KEY is no longer needed but kept as fallback for admin/system use
# GEMINI_API_KEY=your_actual_api_key_here (optional - only for fallback/admin use)

# Gemini Model Name (optional, defaults to gemini-1.5-flash)
# Other options: gemini-1.5-pro, gemini-1.0-pro, etc.
GEMINI_MODEL=gemini-1.5-flash

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///./goalforge.db

# For PostgreSQL (uncomment and modify when ready to switch)
# DATABASE_URL=postgresql://username:password@localhost/goalforge

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption key for API keys (generate with: python -c "import os, base64; print(base64.urlsafe_b64encode(os.urandom(32)).decode())")
ENCRYPTION_KEY=your-generated-encryption-key-here

# Other configurations
ENVIRONMENT=development
